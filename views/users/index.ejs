<%- include('../partials/header.ejs') %>


<body>
  <%- include('../partials/navbar.ejs') %>

  <div class="container">
    <hr>
    <h2>
      Usuários
    </h2>
    <a href="/admin/users/create" class="btn btn-success">Cadastrar Usuário</a>
    <hr>


    <table class="table table-striped table-bordered">

      <thead class="thead-dark">

        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Ações</th>
        </tr>

      </thead>

      <tbody>

        <% users.forEach(user => { %>
        <tr>
          <th><%= user.nome %></th>
          <th><%= user.email %></th>
          <th>

            <a href="/admin/users/edit/<%= user.id %>" class="btn btn-warning">Editar</a>

            <form action="/users/delete" method="post" style="display: inline;" onsubmit="confirmDelete(event, this)">

              <input type="hidden" value="<%= user.id %>" name="id">

              <button class="btn btn-danger" type="submit">Excluir</button>

            </form>
          </th>

        </tr>

        <% }) %>
      </tbody>
    </table>


  </div>

</body>


<%- include('../partials/footer.ejs') %>

<script>
  function confirmDelete(event, form) {
    event.preventDefault()
    var decision = confirm("Você realmente deseja excluir essa categoria?")

    if (decision) {
      form.submit()
    }
  }
</script>